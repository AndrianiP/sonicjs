                  <i class="bi bi-facebook" style="font-size: 1rem;"></i>
                  <i class="bi bi-discord" style="font-size: 1rem;"></i>
                  <i class="bi bi-instagram" style="font-size: 1rem;"></i>

                  <a href="#"><img src="/assets/uploads/s1.png" alt=""></a>
                  <a href="#"><img src="/assets/uploads/s2.png" alt=""></a>
                  <a href="#"><img src="/assets/uploads/s3.png" alt=""></a>
                  <a href="#"><img src="/assets/uploads/s4.png" alt=""></a>
                </h2>
              </div>
            </div>
            <div class="col-md-6">
              <div class="bbt-edit text-md-right">
                <a href="#" onclick="return openFormInModal('edit', 'group', '{{this.group.id}}')" >
                  Edit Bio &nbsp;
                  <img src="/assets/uploads/edit.png" alt="">
                </a>
              </div>
            </div>
          </div>
          <p>{{this.group.data.bio}}</p>
        </div>
      </div>
    </div>				
  </div>
</div>	
