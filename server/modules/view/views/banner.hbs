<div class="banner-bt-area">
  <div class="container">
    <div class="row">
      <div class="col-lg-2">
        <div class="bbt-left">
          <img src="{{this.group.data.icon.src}}" class="img-fluid" alt="">
        </div>
      </div>
      <div class="col-lg-10">
        <div class="bbt-right">
          <div class="row align-items-center">
            <div class="col-md-6">
              <div class="bbt-title">
                <h2>
                  {{this.group.data.title}}
