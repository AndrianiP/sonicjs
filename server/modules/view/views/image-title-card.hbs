<div class="row">
{{#each list}}
  <div class="col{{../data.bootstrapColumnClass}} text-{{../data.textJustification}}">
    <h3>{{this.data.title}}
      <a target="_blank" href="/admin/content/edit/fe/{{this.id}}"><i class="bi bi-pencil"></i></a>
    </h3>
    <img class="img-fluid" src="{{this.data.image.src}}" />
    {{this.data.dateTime}}
  </div>
{{/each}}
</div>

{{#if data.seeMoreLinkCopy}}
<div class="row text-center">
  <div class="col">
   <a href=""#">{{data.seeMoreLinkCopy}}</a>
  </div>
</div>
{{/if}}