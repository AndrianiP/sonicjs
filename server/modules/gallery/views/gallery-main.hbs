{{ log data.view }}

{{#if (eq data.view "lightbox")}}

<div class="gallery-container">

  {{#each data.galleryImages }}
  <div>
<a
  href="/assets/uploads/{{ this.select.file}}"
  title="<b>{{ this.title}}</b> {{ this.body}}"
  ><img src="/assets/uploads/{{ this.select.file}}" /></a
>
</div>
{{/each}}

</div>
{{/if}}



{{#if (eq data.view "swipper")}}

<section class="section features-carousel b-b">
  <div class="container pt-0">
      <div class="cards-wrapper">
          <div class="swiper-container" data-sw-show-items="4" data-sw-autoplay="3500" data-sw-loop="true" data-sw-nav-arrows=".features-nav" data-sw-breakpoints='{"1024": {"slidesPerView": 4,"spaceBetween": 40},"992": {"slidesPerView": 4,"spaceBetween": 15},"768": {"slidesPerView": 4.5,"spaceBetween": 15},"576": {"slidesPerView": 1.5,"spaceBetween": 10}}'>
              <div class="swiper-wrapper px-1">

                {{#each data.galleryImages }}

                  <div class="swiper-slide px-2 px-sm-1">
                      <div class="card border-0 shadow">
                          <div class="card-body">
                              <div class="logo mx-auto my-3"><img src="/assets/uploads/{{ this.select.file}}" class="img-responsive" alt=""></div>
                              <hr class="w-50 mx-auto my-3">
                              <p class="bold mt-4">{{ this.title}}</p>
                              <p class="regular small text-secondary">{{ this.body}}</p>
                          </div>
                      </div>
                  </div>

                  {{/each}}

              </div><!-- Add Arrows -->
              <div class="text-primary features-nav features-nav-next"><span class="text-uppercase small">Next</span> <i class="features-nav-icon fas fa-long-arrow-alt-right"></i></div>
          </div>
      </div>
  </div>
</section><!-- ./Get Started -->

{{/if}}
