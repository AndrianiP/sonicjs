{{#if (eq data.view "lightbox")}}

  <div class="gallery-container">
    {{#each data.galleryImages}}
      <div>
        <a
          href="{{this.select.src}}"
          title="<b>{{this.title}}</b> {{this.body}}"
        ><img src="{{this.select.src}}" /></a>
      </div>
    {{/each}}
  </div>
{{/if}}

{{#if (eq data.view "fancybox")}}
  <div class="gallery-wrapper">

    {{#each data.galleryImages}}

      <a
        href="{{this.select.src}}"
        data-fancybox="gallery"
        data-title="title"
        data-caption="<b>{{this.title}}</b> - {{this.body}}"
      >
        <img src="{{this.select.src}}" class="img-responsive" alt="" />
      </a>

    {{/each}}
  </div>

{{/if}}