<div class="container blog gx-0">

  {{#each data.list}}
    <div class="row gap-y mb-5">

      <div class="col-md-4">
        <a href="{{this.data.url}}"><img
            class="card-img-top img-responsive"
            src="{{this.data.image}}"
            alt=""
          /></a>
      </div>
      <div class="col-md-8">

        <h4><a href="{{this.data.url}}">{{this.data.title}}</a></h4>

        <p class="card-text text-secondary">
          {{this.data.body}}
        </p>
      </div>

    </div>

  {{/each}}

</div>