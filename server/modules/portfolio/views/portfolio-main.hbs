{{ log data}}
{{#each data.items}}
<div>

  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="{{ this.image.src }}" class="img-fluid" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h2 class="card-title">{{ this.title }}</h2>
          <p class="card-text">{{ this.description }}</p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
      </div>
    </div>
  </div>

</div>
{{/each}}
