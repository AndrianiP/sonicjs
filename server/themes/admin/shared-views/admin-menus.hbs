<div class="col-lg-12">
  <div class="card">
    <div class="card-header">
      <i class="{{data.navCurrent.icon}}"></i> Menus
      <a href="javascript:void(0)" onclick="openNewContentTypeModal()" class="btn btn-outline-dark float-right new-menu">New
        Menu</a>
    </div>
    <div class="card-body page-list">
      <table class="table table-responsive-sm table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr>
            <td><a href="/admin/menus/edit/{{ this.id }}">{{ this.data.title }}</a></td>
            <td>

              <a class="btn btn-sm btn-outline-dark rmargin" href="/admin/menus/edit/{{ this.id }}">Edit</a>

              <a tabindex="0" class="btn btn-sm btn-outline-dark" role="button" data-html="true" data-toggle="popover"
              data-trigger="focus" aria-label="Delete {{ this.data.title }}" title="Delete <b>{{ this.data.title }}</b> Forever?" 
              data-content="<a href='/content/{{ this.id }}/{{../data.sessionID}}'
              class='btn btn-sm btn-outline-dark rmargin custom-delete'>Confirm Delete</a>
              ">Delete</a>

              <div class="collapse" style="margin: 12px 0 0; max-width:300px;" id="collapse{{ this.systemId }}">
                <div class="card card-body">
                  <a class='btn btn-sm btn-outline-dark' href="#" onclick='deleteContentType({{ this.id }})'>Confirm Delete
                    {{ this.title }}?</a> </div>
              </div>

            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
  </div>
</div>
