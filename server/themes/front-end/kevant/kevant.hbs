        }

        h1 {
            font-family: {{data.siteSettings.fontHeaders}},
            serif;
        }
    </style>

    {{{data.cssLinks}}}

    {{#if data.showPageBuilder}}
        <link href="/page-builder/css/page-builder.css" rel="stylesheet">
    {{/if}}

</head>

