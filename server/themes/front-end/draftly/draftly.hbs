  <!-- Formio Generic Modal -->
<div class="modal fade" id="genericModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
aria-hidden="true">
<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">New Page</h5>
      <button type="button" class="close" data-{{data.themeSettings.bootstrapToggleMiddle}}dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">

      <input type="hidden" id="block-edit-it">
      <div id="editor-container">

        <meta http-equiv="Content-Type" content="text/html;charset=utf-8">

        <div id="formio"></div>

      </div>

    </div>
  </div>
</div>
</div>

</html>

