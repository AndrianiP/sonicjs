<!doctype html>
<html lang="en" class="h-100 {{data.pageCssClass}}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ data.metaDescription }}">
    <meta name="generator" content="SonicJs">
    <meta name="version" content="{{ data.appVersion }}">
    <link rel="icon" href="/assets/img/favicon.ico">
    <title>{{data.metaTitle}}</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family={{data.siteSettings.fontHeaders}}">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family={{data.siteSettings.fontDefault}}">
    <style>
      body,
      p {
        font-family: '{{data.siteSettings.fontDefault}}',
        serif !important;
      }
  
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: '{{data.siteSettings.fontHeaders}}',
        serif;
      }

      .footer-area {
          padding: 100px 0 50px;
      }

      .footer-area p {
          font-size: 16px;
          font-weight: 500;
          margin-top: 20px;
      }

      .footer-area h4 {
          font-size: 16px;
          font-weight: 500;
          margin-bottom: 25px;
      }

      .footer-area ul li a {
          font-size: 12px;
          font-weight: 500;
          line-height: 14px;
          color: #fff;
          padding-bottom: 8px;
          display: inline-block;
          text-transform: uppercase;
          transition: 0.2s all ease;
      }

      .footer-area ul li a:hover {
          color: #FFCB05;
      }

      .nobullets {
          list-style-type: none;
          padding: 0;
          margin: 0;
      }

    </style>
    
    {{{data.cssLinks}}}

    {{#if data.showPageBuilder}}
    <link href="/page-builder/css/page-builder.css" rel="stylesheet">
    {{/if}}

    {{{ data.headerJs }}}

  </head>

  <body class="d-flex flex-column h-100">
    
    <input type="hidden" id="page-id" name="page-id"  value="{{data.id}}">
    <input type="hidden" id="sessionID" value="{{data.sessionID}}"/>
    <input type="hidden" id="theme"  value="bootstrap5"/>

<header>

  {{> menu level='1'}}

</header>

<main class="flex-shrink-0">

  {{#if data.showPageBuilder}}
  {{> page-builder }}
  {{/if}}

  {{{body}}}

</main>

<footer class="footer mt-auto py-3">
  <div class="container footer-area">
    <div class="row">
      <div class="col-lg-6 col-md-3 col-6">
